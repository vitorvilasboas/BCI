<StartScreen>:
    login: usuario
    on_pre_enter: if root.session.info.flag: root.update_screen()
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        canvas:
            Color:
                rgba: 185, 182, 183, 0.67 # 128, 128, 128, 0.5
            Rectangle:
                size:self.size
                pos:self.pos
        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            padding: 20
            size_hint: None, None
            size: self.minimum_size
            Label:
                font_size: 20
                text: 'OverMind: a MI-based BCI Platform'
                color: 0, 0, 0, 1
            Label:
                text: root.label_msg
                font_size: 20
            TextInput:
                id: usuario
                size_hint: None,None
                hint_text: 'User Name'
                text: root.session_text
                font_size: 20
                size: 200,self.minimum_height
                multiline: False
            Button:
                text: 'Entry'
                on_press: root.check_login()
                size_hint: None,None
                size: 200,50
            Button:
                text: 'Register'
                on_press: root.change_to_register()
                size_hint: None,None
                size: 200,50