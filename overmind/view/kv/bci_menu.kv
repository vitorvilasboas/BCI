<BCIMenu>:
    on_pre_enter: root.update_screen()
    #on_enter: if root.session.info.flag: root.update_screen()
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        canvas:
            Color:
                rgba: 185, 182, 183, 0.67 # 128, 128, 128, 0.5
            Rectangle:
                size:self.size
                pos:self.pos
        BoxLayout:
            id: box
            orientation: 'vertical'
            spacing: 20
            padding: 20
            size_hint: None, None
            size: self.minimum_size
#            Label:
#                font_size: 20
#                text: 'BCI Menu'
            Button:
                id: acq_button
                text: 'Acquisition'
                on_press: root.change_to_acquisition()
                size_hint: None,None
                size: 200,50
            Button:
                text: 'Calibration'
                on_press: root.change_to_calibration()
                size_hint: None,None
                size: 200,50
            Button:
                id: command_button
                text: root.label_command #'Live Command'
                on_press: root.change_to_command()
                size_hint: None,None
                size: 200,50
            Button:
                text: 'Logout'
                on_press: root.exit()
                size_hint: None,None
                size: 200,50